{{>header}}
{{>navbar}}
<div class="container mt-5 mb-3">
    <div class="d-flex align-items-center">
        <a href="/" class="btn btn-dark rounded"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                    d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
        </a>
        <div class="ms-3 rounded border border-dark p-2">
            <h5 class="fw-bold mx-3">{{coll}}</h5>
        </div>
        {{#if owner}}
        <a href="/delete/{{id}}" class="btn btn-danger ms-auto">Delete</a>
        {{/if}}
    </div>
</div>
<div class="container">
    {{#if owner}}
    <div class="d-flex rounded border border-dark p-2 align-items-center fs-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
            class="bi bi-plus-circle me-2" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
            <path
                d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
        </svg>Add a task
    </div>
    {{/if}}

    <h4 class="mt-3">Task</h4>
    {{#each task}}
    <div class="row px-2 mb-2">
        <div class="col-12 p-2 border border-dark rounded d-flex align-items-center">
            <h4 class="fw-bold">{{this.name}}</h4>
            <input type="checkbox" class="ms-auto me-3" name="" id="" value="checkedValue"
                style="width: 30px; height:30px;">
        </div>
    </div>
    {{/each}}

    <h4 class="mt-3">Completed</h4>

    {{#each taskd}}
    <div class="row px-2 mb-2">
        <div class="col-12 p-2 border border-dark rounded d-flex align-items-center">
            <h4 class="fw-bold">{{this.name}}</h4>

            <input type="checkbox" class="ms-auto me-3" name="" id="" value="checkedValue" checked disabled
                style="width: 30px; height:30px;">
            <a href="/delete-task/{{this.id}}" class="btn btn-danger">Delete</a>
        </div>
    </div>
    {{/each}}
</div>
{{>footer}}