{{>header}}
{{>navbar}}
<div class="container pt-5">
    <h3>Collections</h3>
    <div class="row row-cols-3 g-4 mt-3">
        {{#each collections}}
        <div class="col card-group">
            <a href="/collection/{{this.id}}" class="text-decoration-none">
                <div class="card text-center" style="width: 180px">
                    <div class="card-body">
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor"
                            class="bi bi-file-earmark-minus" viewBox="0 0 16 16">
                            <path d="M5.5 9a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H6a.5.5 0 0 1-.5-.5z" />
                            <path
                                d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z" />
                        </svg>
                        <h4 class="fw-bold mt-2">
                            {{this.name}}
                        </h4>
                    </div>
                </div>
            </a>
        </div>
        {{/each}}
        {{#if isLogin}}
        <div class="col card-group">
            <div class="text-decoration-none text-primary" data-bs-toggle="modal" data-bs-target="#addcollection">
                <div class="card text-center" style="width: 180px">
                    <div class="card-body">
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor"
                            class="bi bi-plus-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path
                                d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                        </svg>
                        <h4 class="fw-bold mt-2">
                            Add New
                        </h4>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</div>
<div class="modal fade" id="addcollection" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add New Collection</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/collection" method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">Collection Name</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
{{>footer}}